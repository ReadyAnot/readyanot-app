datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  username  String     @id
  email     String     @unique
  firstName String
  lastName  String
  password  String
  UserRole  UserRole[]
}

model Role {
  name     String     @id
  UserRole UserRole[]
}

model UserRole {
  user     User   @relation(fields: [username], references: [username])
  username String
  role     Role   @relation(fields: [roleName], references: [name])
  roleName String

  @@id([username, roleName])
}

model Log {
  namespace String
  topic     String
  data      String

  @@id([namespace, topic])
}
