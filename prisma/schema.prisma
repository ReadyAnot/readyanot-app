datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl"]
}

model User {
  username  String  @id
  email     String  @unique
  firstName String
  lastName  String
  password  String
  isAdmin   Boolean @default(false)
}

model QuizQuestion {
  id      Int    @id @default(autoincrement())
  content String
}

model Log {
  id        Int      @id @default(autoincrement())
  namespace String
  topic     String
  data      String
  createdAt DateTime @default(now())
}
